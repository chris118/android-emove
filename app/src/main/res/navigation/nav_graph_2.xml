<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/orderListFragment">


    <fragment
        android:id="@+id/orderListFragment"
        android:name="com.boyu.emove.orderlist.ui.OrderListFragment"
        android:label="订单列表"
        tools:layout="@layout/fragment_order_list" >
        <action
            android:id="@+id/action_orderListFragment2_to_orderFragment2"
            app:destination="@id/orderFragment2"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_orderListFragment_to_kanjiaFragment"
            app:destination="@id/kanjiaFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/orderFragment2"
        android:name="com.boyu.emove.order.ui.OrderFragment"
        android:label="订单详情"
        tools:layout="@layout/fragment_order" >
        <argument
            android:name="orderId"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>


    <fragment
        android:id="@+id/kanjiaFragment"
        android:name="com.boyu.emove.kanjia.KanjiaFragment"
        android:label="砍价"
        tools:layout="@layout/fragment_kanjiaragment" >
        <argument
            android:name="orderId"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>

</navigation>