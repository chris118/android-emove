<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
    >

    <RelativeLayout
        android:id="@+id/ll_tab3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColor"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_company_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/city" />

        <EditText
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_company_icon1"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@+id/iv_company_icon1"
            android:ems="10"
            android:hint="请输入公司名称"
            android:inputType="textPersonName"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_company_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_company_icon1"
            android:layout_alignStart="@+id/iv_company_icon1"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/contact" />

        <EditText
            android:id="@+id/tv_company_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_company_name"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="11dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="29dp"
            android:layout_toEndOf="@+id/iv_company_icon1"
            android:ems="10"
            android:hint="请输入联系人姓名"
            android:inputType="textPersonName"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_company_icon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_company_icon2"
            android:layout_alignStart="@+id/iv_company_icon2"
            android:layout_marginTop="30dp"
            android:src="@drawable/phone" />

        <EditText
            android:id="@+id/tv_company_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_company_contact"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="25dp"
            android:layout_toEndOf="@+id/iv_company_icon1"
            android:ems="10"
            android:hint="请输入联系人电话"
            android:inputType="textPersonName"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="55dp"
            android:layout_marginBottom="80dp"
            android:src="@drawable/tip" />

        <TextView
            android:id="@+id/tv_info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_company_mobile"
            android:layout_alignTop="@+id/imageView5"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="3dp"
            android:layout_marginTop="-2dp"
            android:text="如有疑问可致电"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView5"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="1dp"
            android:layout_marginTop="-2dp"
            android:layout_toEndOf="@+id/tv_info1"
            android:text="400-000-6688"
            android:textColor="@color/themeColor"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView5"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="-2dp"
            android:layout_toEndOf="@+id/textView7"
            android:text="进行免费咨询"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_company_book"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/selector_button"
            android:text="立即预约"
            android:textColor="@color/whiteColor" />
    </RelativeLayout>
</LinearLayout>